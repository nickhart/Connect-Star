{
  "name": "connect-star",
  "version": "0.2.0",
  "description": "A modern Connect Four game built with Turborepo, featuring cross-platform web and mobile applications with shared game logic",
  "license": "MIT",
  "author": "Connect-Star Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/Connect-Star.git"
  },
  "bugs": {
    "url": "https://github.com/username/Connect-Star/issues"
  },
  "homepage": "https://github.com/username/Connect-Star#readme",
  "keywords": [
    "connect-four",
    "game",
    "react",
    "typescript",
    "monorepo",
    "turborepo",
    "next.js",
    "react-native",
    "expo"
  ],
  "private": false,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:coverage": "jest --config jest.config.workspace.js --coverage",
    "test:ci": "jest --config jest.config.workspace.js --coverage --ci --watchAll=false",
    "clean": "turbo clean",
    "quality": "pnpm lint && pnpm type-check && pnpm test",
    "quality:fix": "pnpm format && pnpm lint && pnpm type-check",
    "update-client": "./scripts/update-client.sh",
    "dev-token": "./scripts/get-dev-token.sh",
    "ci:watch": "./scripts/watch-ci.sh",
    "ci:status": "gh run list --limit 5",
    "ci:latest": "gh run view $(gh run list --limit 1 --json databaseId --jq '.[0].databaseId')",
    "web": "pnpm dev --filter=@connect-star/web",
    "mobile": "pnpm dev --filter=@connect-star/mobile",
    "web:build": "pnpm build --filter=@connect-star/web",
    "mobile:build": "pnpm build --filter=@connect-star/mobile",
    "web:test": "pnpm test --filter=@connect-star/web",
    "mobile:test": "pnpm test --filter=@connect-star/mobile",
    "preflight": "./scripts/preflight.sh",
    "test:quick": "./scripts/test-quick.sh",
    "fix": "./scripts/format-fix.sh"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.4",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "turbo": "^2.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.12.1",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@simple-game-server/client": "file:../simple-game-server/clients/typescript/simple-game-server-client-0.1.0.tgz"
  }
}
