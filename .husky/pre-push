#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

# Check if there are any commits to push
COMMITS_TO_PUSH=$(git rev-list --count @{upstream}..HEAD 2>/dev/null || echo "0")

if [ "$COMMITS_TO_PUSH" = "0" ]; then
  echo "ğŸ” No new commits to push - skipping pre-push checks"
  exit 0
fi

echo "ğŸš€ Running pre-push checks for $COMMITS_TO_PUSH commit(s)..."

# Run full test suite
echo "ğŸ§ª Running tests..."
pnpm test:ci
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed! Push cancelled."
  exit 1
fi

# Build all packages
echo "ğŸ”¨ Building all packages..."
pnpm build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Push cancelled."
  exit 1
fi

# Type check all packages
echo "ğŸ” Type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type check failed! Push cancelled."
  exit 1
fi

echo "âœ… All pre-push checks passed!"