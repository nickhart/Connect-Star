{
  "name": "connect-star",
  "version": "0.2.0",
  "description": "A modern Connect Four game built with Turborepo, featuring cross-platform web and mobile applications with shared game logic",
  "license": "MIT",
  "author": "Connect-Star Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/Connect-Star.git"
  },
  "bugs": {
    "url": "https://github.com/username/Connect-Star/issues"
  },
  "homepage": "https://github.com/username/Connect-Star#readme",
  "keywords": [
    "connect-four",
    "game",
    "react",
    "typescript",
    "monorepo",
    "turborepo",
    "next.js",
    "react-native",
    "expo"
  ],
  "private": false,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:coverage": "jest --config jest.config.workspace.js --coverage",
    "test:ci": "jest --config jest.config.workspace.js --coverage --ci --watchAll=false",
    "clean": "turbo clean",
    "prepare": "husky",
    "quality": "pnpm lint && pnpm type-check && pnpm test",
    "quality:fix": "pnpm format && pnpm lint && pnpm type-check",
    "pre-commit": "pnpx lint-staged",
    "pre-push": "pnpm test:ci && pnpm build && pnpm type-check"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^29.5.14",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "turbo": "^2.5.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "**/*.{json,md,css}": [
      "prettier --write"
    ],
    "**/packages/**/*.{ts,tsx}": [
      "bash -c 'cd packages/$(echo \"$0\" | cut -d/ -f2) && pnpm type-check'"
    ],
    "**/apps/**/*.{ts,tsx}": [
      "bash -c 'cd apps/$(echo \"$0\" | cut -d/ -f2) && pnpm type-check'"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@10.12.1"
}
