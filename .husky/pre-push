#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run full test suite
echo "🧪 Running tests..."
pnpm test:ci
if [ $? -ne 0 ]; then
  echo "❌ Tests failed! Push cancelled."
  exit 1
fi

# Build all packages
echo "🔨 Building all packages..."
pnpm build
if [ $? -ne 0 ]; then
  echo "❌ Build failed! Push cancelled."
  exit 1
fi

# Type check all packages
echo "🔍 Type checking..."
pnpm type-check
if [ $? -ne 0 ]; then
  echo "❌ Type check failed! Push cancelled."
  exit 1
fi

echo "✅ All pre-push checks passed!"